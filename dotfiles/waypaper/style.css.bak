@import url("colors.css");

/* WINDOW: semi-transparent background (adjust alpha 0.88 -> change if needed) */
window {
    background-color: rgba(9, 23, 23, 0.88);
    color: #c1c5c5;
    border-radius: 12px;
    padding: 8px;
}

/* HIDE TITLEBAR / HEADERBAR (collapse it) */
headerbar,
headerbar * {
    min-height: 0;
    padding: 0;
    margin: 0;
    background: transparent;
    color: transparent;
    border: none;
}

/* COLLAPSE THE TOP TOOL ROW (folder, monitor, select, apply, save, refresh) */
/* Target the first direct box under the window (where Waypaper places the buttons). */
window > box:first-child {
    min-height: 0;
    padding: 0;
    margin: 0;
}

/* Hide everything inside that top box (buttons etc) */
window > box:first-child * {
    color: transparent;
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
}

/* KEEP WALLPAPER GRID VISIBLE */
flowbox,
flowboxchild {
    background: transparent;
    color: inherit;
}

/* THEMED SELECTION (replace white highlight) */
flowboxchild:selected,
flowboxchild:active,
flowboxchild:focus {
    background-color: rgba(183, 43, 33, 0.16);
    border: 2px solid rgba(183, 43, 33, 0.9);
    border-radius: 8px;
}

/* Selected text inside a thumbnail */
flowboxchild:selected #text,
flowboxchild:active #text {
    color: #c1c5c5;
    font-weight: 600;
}
